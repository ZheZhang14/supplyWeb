<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.project.mapper.OrderMapper">
    <update id="updateOrder">
        update order
        <set>
            <if test="status != null">
                status=#{status},
            </if>
        </set>
            where id=#{id}
    </update>
</mapper>